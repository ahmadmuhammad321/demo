<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:background="#ffffff"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="385dp"
            android:layout_height="79dp"
            android:layout_marginTop="150dp"
            android:text="Enter OTP code"
            android:textColor="@color/black"
            android:textSize="33dp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="99dp"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="18dp"
            >


            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="24sp"
                android:inputType="number"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/otp_border"/>
            <EditText
                android:background="@drawable/otp_border"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="24sp"
                android:inputType="number"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:background="@drawable/otp_border"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="24sp"
                android:inputType="number"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:background="@drawable/otp_border"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="24sp"
                android:inputType="number"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:background="@drawable/otp_border"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="24sp"
                android:inputType="number"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>
        <Button
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:text="Next"
            android:textAllCaps="false"
            android:background="@drawable/round"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginTop="38dp"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did not receive code?"
            android:textColor="#a9a5a5"
            android:textSize="20dp"
            android:textAlignment="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESEND"
            android:background="#0000"
            android:textColor="#7473ef"
            android:textSize="20dp"/>


    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="A verification OTP code has been"
            android:textColor="#a9a5a5"
            android:textSize="20dp"
            android:textAlignment="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sent to"
                android:textColor="#a9a5a5"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 300 1234567"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>


        </LinearLayout>


    </LinearLayout>





</ScrollView>